{
    "name": "glen/slack-unfurl",
    "description": "Extensible Slack App for link unfurling",
    "license": "MIT",
    "type": "composer-plugin",
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SlackUnfurl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SlackUnfurl\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "composer-plugin-api": "^1.1.0 || ^2.0",
        "monolog/monolog": "^1.23",
        "silex/silex": "~2.0",
        "symfony/dotenv": "^4.0",
        "wrapi/slack": "^0.1.6"
    },
    "require-dev": {
        "composer/composer": "^1.10",
        "composer/package-versions-deprecated": "^1.8",
        "phpunit/phpunit": "^6.5",
        "symfony/var-dumper": "^4.0"
    },
    "extra": {
        "class": "SlackUnfurl\\Composer\\RegisterPlugin"
    },
    "scripts": {
        "ngrok": [
            "ngrok http 4390"
        ],
        "server": [
            "echo 'Started web server on http://slack-unfurl.127.0.0.1.xip.io:4390'",
            "php -S slack-unfurl.127.0.0.1.xip.io:4390 -t web"
        ],
        "post-update-cmd":  "SlackUnfurl\\Composer\\RegisterPlugin::registerPlugins",
        "post-install-cmd": "SlackUnfurl\\Composer\\RegisterPlugin::registerPlugins"
    },
    "scripts-descriptions": {
        "server": "Start http server at http://slack-unfurl.127.0.0.1.xip.io:4390",
        "ngrok": "Start ngrok, https://api.slack.com/tutorials/tunneling-with-ngrok"
    }
}
